{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <form method="post" name="login">
                <div class="card">
                    <div class="card-header">
                        <h1 class="mb-0">Connexion</h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger"
                                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" value="{{ last_username }}"
                                   autofocus
                                   autocomplete required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-block btn-primary" type="submit">Se connecter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
