{% extends 'base.html.twig' %}

{% block title %}Historique des commandes{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">Historique de commandes</h1>
                </div>
                <div class="card-body">
                    <table class="table table-striped mb-0">
                        <thead>
                        <tr>
                            <th class="text-center">N° Commande</th>
                            <th class="text-center">Date</th>
                            <th class="text-center">Producteur</th>
                            <th class="text-center">Nombre de produits</th>
                            <th class="text-center">Total TTC</th>
                            <th class="text-center">Statut</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td class="text-center">
                                    <a href="{{ path('order_show', { orderReference: order.orderReference }) }}">
                                        {{ order.orderReference }}
                                    </a>
                                </td>
                                <td class="text-center">{{ order.createdAt|date('d/m/Y') }}</td>
                                <td class="text-center">{{ order.farm.name }}</td>
                                <td class="text-center">{{ order.numberOfProducts }}</td>
                                <td class="text-center">{{ order.totalIncludingTaxes|format_currency('EUR') }}</td>
                                <td class="text-center">
                                    {% if order.state == 'created' %}
                                        <span class="badge badge-light">En attente</span>
                                    {% elseif order.state == 'accepted' %}
                                        <span class="badge badge-warning">Acceptée - Réglement en attente</span>
                                    {% elseif order.state == 'settled' %}
                                        <span class="badge badge-primary">Réglée</span>
                                    {% elseif order.state == 'processing' %}
                                        <span class="badge badge-secondary">En cours de préparation</span>
                                    {% elseif order.state == 'ready' %}
                                        <span class="badge badge-info">Prête</span>
                                    {% elseif order.state == 'issued' %}
                                        <span class="badge badge-success">Délivrée</span>
                                    {% elseif order.state == 'canceled' %}
                                        <span class="badge badge-dark">Annulée</span>
                                    {% elseif order.state == 'refused' %}
                                        <span class="badge badge-danger">Refusée</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if is_granted('settle', order) and workflow_can(order, 'settle') %}
                                        <a href="{{ path('order_settle', {id: order.id}) }}"
                                           class="btn btn-dark btn-sm">Régler</a>
                                    {% endif %}
                                    {% if is_granted('cancel', order) and workflow_can(order, 'cancel') %}
                                        <a href="{{ path('order_cancel', {id: order.id}) }}"
                                           class="btn btn-outline-warning btn-sm">Annuler</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    {{ knp_pagination_render(orders) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
