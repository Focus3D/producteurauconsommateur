{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">Mon Panier</h1>
                </div>
                <div class="card-body">
                    <table class="table table-striped mb-0">
                        <thead>
                        <tr>
                            <th class="text-center">Nom du produit</th>
                            <th class="text-center">Prix unitaire</th>
                            <th class="text-center">TVA</th>
                            <th class="text-center">Quantit√©</th>
                            <th class="text-center">Prix total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in form.cart %}
                            <tr>
                                <td class="text-center">{{ item.vars.data.product.name }}</td>
                                <td class="text-center">{{ (item.vars.data.product.price.unitPrice / 100)|format_currency('EUR') }}</td>
                                <td class="text-center">{{ (item.vars.data.product.price.vat) }}%</td>
                                <td class="text-center">{{ form_widget(item.quantity) }}</td>
                                <td class="text-center">{{ item.vars.data.priceIncludingTaxes|format_currency('EUR') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td class="text-right" colspan="4">Total TTC</td>
                            <td class="text-center">{{ app.user.totalCartIncludingTaxes|format_currency('EUR') }}</td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="card-footer">
                    <button class="btn btn-block btn-outline-primary" type="submit">Modifier</button>
                    <a href="{{ path('order_create') }}" class="btn btn-block btn-primary">Passer commande</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
